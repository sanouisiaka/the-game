{
  "preset": "ts-jest",
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "setupFiles": [
    "./setup-tests.ts"
  ],
  "rootDir": ".",
  "testRegex": ".*\\.(spec|steps)\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s"
  ],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "src/config",
    "src/main.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["json", "lcov", "text", "json-summary"],
  "testEnvironment": "node"
}